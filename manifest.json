{
  "manifest_version": 3,
  "name": "Sea Turtle",
  "version": "1.12.0",
  "description": "AI powered super SeaTalk.",
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://seatalkweb.com/*"
      ],
      "js": [
        "content-scripts/sticker-pack.js"
      ],
      "css": [
        "content-scripts/custom-style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/stickers/*",
        "assets/stickers/*/*"
      ],
      "matches": [
        "https://seatalkweb.com/*"
      ]
    }
  ],
  "permissions": [
    "clipboardWrite",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
